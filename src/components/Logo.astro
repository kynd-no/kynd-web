<script>
  const paths = document.querySelectorAll<SVGPathElement>('svg.logo path');
  const rects = Array.from(paths).map((path) => path.getBoundingClientRect());

  document.addEventListener('mousemove', (event) => {
    const mouseX = event.clientX;
    const mouseY = event.clientY;

    paths.forEach((path, index) => {
      const rect = rects[index];

      const isInside =
        rect &&
        mouseX >= rect.left &&
        mouseX <= rect.right &&
        mouseY >= rect.top &&
        mouseY <= rect.bottom;

      if (isInside) {
        path.style.transform = 'translateY(-21%)';
      } else {
        path.style.transform = 'translateY(0)';
      }
    });
  });
</script>
