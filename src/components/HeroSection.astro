---
import ButtonLink from './ButtonLink.astro';

export type Props = {
  title: string;
  preamble?: string;
};

const { title, preamble } = Astro.props;
---

<div class="hero-section">
  <div>
    <h1>{title}</h1>
    {preamble && <p>{preamble}</p>}
    <ButtonLink href="/">Les artikkel</ButtonLink>
  </div>
  <div class="image-container">
    <img src="/Layer_2.svg" alt="" />
  </div>
</div>

<style>
  .hero-section {
    display: grid;

    @media (--sm) {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }

    @media (--lg) {
      gap: 5rem;
    }
  }

  h1 {
    font-size: var(--fs-heading-m);

    @media (--md) {
      font-size: var(--fs-heading-l);
    }
  }

  p {
    margin-block: 2rem;
    font-size: var(--fs-body-m);

    @media (--md) {
      font-size: var(--fs-body-l);
    }
  }

  .image-container {
    display: none;

    @media (--sm) {
      display: block;
    }
  }
</style>
