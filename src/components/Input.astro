---
export type Props = {
  id: string;
  label: string;
  name: string;
  placeholder?: string;
  required?: boolean;
  type?: 'text' | 'email';
  hiddenLabel?: boolean;
};

const {
  id,
  label,
  name,
  type = 'text',
  placeholder,
  required = false,
  hiddenLabel = false,
} = Astro.props;
---

<div>
  {!hiddenLabel && <label for={id}>{label}</label>}
  <input
    id={id}
    name={name}
    type={type}
    placeholder={placeholder}
    required={required}
    aria-label={hiddenLabel ? label : undefined}
  />
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    inline-size: 100%;
  }

  label {
    font-size: var(--fs-body-s);
  }

  input {
    border: 2px solid var(--color-primary);
    background-color: var(--color-secondary);
    inline-size: 100%;
    block-size: 3.25rem;
    line-height: 1;
    padding-inline: 1.5rem;
    caret-color: var(--color-primary);

    &::placeholder {
      color: var(--color-gray);
    }
  }
</style>
