---
import { getCollection } from 'astro:content';
import ImageLink from '@/components/ImageLink.astro';
import LinkGrid from '@/components/LinkGrid.astro';

const employees = await getCollection('employee');
---

<LinkGrid>
  {
    employees.map(({ data, slug }) => (
      <ImageLink name={data.name} image={data.image} href={`/folka/${slug}`} />
    ))
  }
</LinkGrid>
