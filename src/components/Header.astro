---
import HeaderLink from '@/components/HeaderLink.astro';
import Logo from '@/components/Logo.astro';
---

<header>
  <a href="/" aria-label="Forside" class="logo-link"><Logo /></a>
  <nav>
    <HeaderLink href="/">Forside</HeaderLink>
    <HeaderLink href="/shaker">Blogg</HeaderLink>
    <HeaderLink href="/om-oss">Om oss</HeaderLink>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 1rem 2rem;
    /* box-shadow: 0 2px 8px rgba(var(--black), 5%); */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  @media (min-width: 720px) {
    header {
      flex-direction: row;
    }
  }

  .logo-link {
    width: 4em;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    color: var(--color-text);
  }

  nav {
    display: flex;
    gap: 1.5rem;
  }
</style>
