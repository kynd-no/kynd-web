<style>
  footer {
    padding: 2em 1em 6em 1em;
    color: var(--color-footer);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    line-height: 1;
  }

  .company-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5em;
  }

  .orgnr {
    color: var(--color-footer);
  }

  .mail-link {
    text-decoration: none;
    color: var(--color-footer);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
  }

  .social-links a {
    text-decoration: none;
    color: var(--color-footer);
    /* color: rgb(var(--gray)); */
  }

  .social-links a:hover {
    /* color: rgb(var(--gray-dark)); */
  }

  .copyright {
    margin-top: 0.5rem;
    display: block;
    text-align: center;
  }
</style>
