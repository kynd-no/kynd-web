---
import { getCollection, type CollectionEntry } from 'astro:content';
import EmployeeGrid from '@/components/EmployeeGrid.astro';
import Layout from '@/layouts/Base.astro';

export async function getStaticPaths() {
  const employees = await getCollection('employee');
  return employees.map((employee) => ({
    params: { slug: employee.slug },
    props: employee,
  }));
}

type Props = CollectionEntry<'employee'>;
const employee = Astro.props;
const { name, image } = employee.data;
const { Content } = await employee.render();
---

<Layout title={name} description={`MÃ¸t ${name}`}>
  <article>
    <img src={image} alt={name} />
    <div>
      <h1>{name}</h1>
      <Content />
    </div>
  </article>
  <EmployeeGrid />
</Layout>

