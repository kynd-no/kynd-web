      grid-template-columns: 1fr 1fr;
    }
  }

  img {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
  }

  h1 {
    margin-top: 0;
  }

  :global(p) {
    font-size: 150%;
    margin-bottom: 1rem;
